<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:ckw="http://schemas.android.com/apk/res/com.ckw.mymobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.ckw.mymobilesafe.ui.SettingItemView
        ckw:title="设置是否自动更新"
        ckw:desc_on="自动更新已经开启"
        ckw:desc_off="自动更新已经关闭"
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> 
    </com.ckw.mymobilesafe.ui.SettingItemView>
    
    <com.ckw.mymobilesafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        ckw:title="号码归属地显示"
        ckw:desc_on="号码归属地显示已经开启"
        ckw:desc_off="号码归属地显示已经关闭"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> 
    </com.ckw.mymobilesafe.ui.SettingItemView>
    
     <com.ckw.mymobilesafe.ui.SettingItemView 
         android:id="@+id/siv_callsms_safe"
         ckw:title="黑名单拦截设置"
         ckw:desc_on="黑名单拦截已经开启"
         ckw:desc_off="黑名单拦截已经关闭"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >
     </com.ckw.mymobilesafe.ui.SettingItemView>
    
     <com.ckw.mymobilesafe.ui.SettingItemView 
         android:id="@+id/siv_watchdog"
         ckw:title="程序锁设置"
         ckw:desc_on="程序锁服务已经开启"
         ckw:desc_off="程序锁服务已经关闭"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >
     </com.ckw.mymobilesafe.ui.SettingItemView>
     
    <com.ckw.mymobilesafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> 
    </com.ckw.mymobilesafe.ui.SettingClickView>
        
    
    
</LinearLayout>